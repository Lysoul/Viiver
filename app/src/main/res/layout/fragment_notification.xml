<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/colorWhite">


        <ImageView
            android:id="@+id/picprofile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/ic_sample_profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/picprofile"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topicnotification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Topic of notification"
                android:textColor="@color/cardview_dark_background"
                android:textSize="11dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textnoficationcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/topicnotification"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/picprofile"
                android:gravity="center_vertical"
                android:text="sing aospdkas assdsakpdaskdassdsakpdaskdassdsakpd"
                android:textColor="@color/colorSoftDark"
                android:textSize="11sp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/notificationimg"
            android:layout_width="11dp"
            android:layout_height="11dp"
            android:layout_below="@id/picprofile"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_location_24dp" />

        <TextView
            android:id="@+id/notificationtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/picprofile"

            android:layout_toRightOf="@id/notificationimg"
            android:text="3 min ago"
            android:textColor="@color/colorSoftDark"
            android:textSize="9sp" />
    </RelativeLayout>


</LinearLayout>
